# ==============================================================================
# Backend Environment Configuration
# ==============================================================================
# NOTE: This file is used by the backend server (Express.js)
# Frontend-specific variables are in frontend/.env.local
# IMPORTANT: Keep FRONTEND_URL and PORT in sync with frontend/.env.local values
# ==============================================================================

# MongoDB Configuration
MONGODB_URI=mongodb://root:ogsadmin@localhost:27019/attendance?authSource=admin

# Backend API Configuration
PORT=4000
NODE_ENV=development

# Frontend CORS Configuration
# Must match NEXTAUTH_URL in frontend/.env.local
FRONTEND_URL=http://localhost:4001

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-min-32-characters-long-change-this-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=your-super-secret-refresh-key-min-32-characters-long-change-this-in-production
JWT_REFRESH_EXPIRES_IN=7d

# Bcrypt
BCRYPT_ROUNDS=10
