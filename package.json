{
    "name": "karate-attendance-backend",
    "version": "1.0.0",
    "description": "TypeScript Express.js backend for karate school attendance management",
    "main": "dist/index.js",
    "scripts": {
        "dev": "ts-node-dev --respawn --transpile-only -r tsconfig-paths/register src/index.ts",
        "dev:frontend": "cd frontend && export $(grep -v '^#' .env.local | xargs) && pnpm run dev",
        "dev:all": "pnpm run dev & pnpm run dev:frontend",
        "build": "tsc",
        "start": "node dist/index.js",
        "test": "jest",
        "seed:admin": "ts-node -r tsconfig-paths/register src/scripts/seedAdmin.ts"
    },
    "dependencies": {
        "@fullcalendar/core": "^6.1.20",
        "@fullcalendar/daygrid": "^6.1.20",
        "@fullcalendar/timegrid": "^6.1.20",
        "bcryptjs": "^3.0.3",
        "cors": "^2.8.5",
        "dotenv": "^17.2.3",
        "express": "^5.2.1",
        "express-rate-limit": "^8.2.1",
        "helmet": "^8.1.0",
        "joi": "^18.0.2",
        "js-yaml": "^4.1.1",
        "jsonwebtoken": "^9.0.3",
        "moment": "^2.30.1",
        "mongoose": "^9.1.2"
    },
    "devDependencies": {
        "@types/cors": "^2.8.19",
        "@types/express": "^5.0.6",
        "@types/jest": "^30.0.0",
        "@types/js-yaml": "^4.0.9",
        "@types/jsonwebtoken": "^9.0.10",
        "@types/mongodb": "^4.0.7",
        "@types/node": "^22.10.5",
        "jest": "^30.2.0",
        "mongodb-memory-server": "^11.0.1",
        "ts-jest": "^29.4.6",
        "ts-node-dev": "^2.0.0",
        "tsconfig-paths": "^4.2.0",
        "typescript": "^5.9.3"
    }
}
